      }
    },
    {
      "type": "TopBar.Widgets.LineSpacer",
      "settings": {
        "color": "#888888",
        "width": 1,
        "height": 10
      }
    },
    {
      "type": "TopBar.Widgets.Clock",
      "settings": {
        "date": true,
        "seconds": false,
